# Environment variables required for deployment

# Database connection URL (Neon or PostgreSQL)
DATABASE_URL="postgres://user:password@host:5432/dbname?sslmode=require"

# Session secret for cookies (set a strong random string)
SESSION_SECRET="change-me-please"

# Gmail SMTP credentials (optional, for verification/reset emails)
GMAIL_USER="your@gmail.com"
GMAIL_APP_PASSWORD="your-app-password"

# Google OAuth (optional)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Node environment (Vercel sets this automatically to production)
NODE_ENV="production"